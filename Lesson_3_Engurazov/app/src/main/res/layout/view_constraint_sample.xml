<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/textViewAccountDataHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/account_data_hint_text"
        android:textColor="@color/colorSquash"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAccountDataHint"
        android:orientation="vertical"
        android:layout_marginTop="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAccountDataHint">

        <TextView
            android:id="@+id/textViewNameHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/name_hint_text"
            android:textColor="@color/colorWarmGgrey"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/colorGreyishBrown"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Анастасия" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutName"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutName">

        <TextView
            android:id="@+id/textViewSurnameHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/surname_hint_text"
            android:textColor="@color/colorWarmGgrey"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/colorGreyishBrown"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Антонина" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutSurname"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSurname">

        <TextView
            android:id="@+id/textViewEmailHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/email_hint_text"
            android:textColor="@color/colorWarmGgrey"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/colorGreyishBrown"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="anykee.box@gmail.ru" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutEmail"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutEmail">

        <TextView
            android:id="@+id/textViewLoginHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/login_hint_text"
            android:textColor="@color/colorWarmGgrey"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/colorGreyishBrown"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="HIE023UOI88" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutLogin"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutLogin">

        <TextView
            android:id="@+id/textViewRegionHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/region_hint_text"
            android:textColor="@color/colorWarmGgrey"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/colorGreyishBrown"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Санкт-Петербург" />
    </LinearLayout>

        <TextView
            android:id="@+id/textViewExitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/colorGreyishBrown"
            android:lineSpacingExtra="8sp"
            android:background="?attr/selectableItemBackground"
            android:text="@string/exit_hint_text"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_menu_exit"
            android:drawablePadding="31dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutRegion"
            />


</androidx.constraintlayout.widget.ConstraintLayout>