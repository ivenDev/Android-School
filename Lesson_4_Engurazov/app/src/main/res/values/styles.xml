<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ItemNameTheme">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorCharcoalGrey</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>


    <style name="ItemHintTheme" parent="ItemNameTheme">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorCoral</item>

    </style>


</resources>
