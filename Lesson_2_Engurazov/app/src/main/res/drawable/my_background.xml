<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:id="@+id/rectangle_red"
        android:bottom="20dp"
        android:right="20dp">

        <shape
            android:shape="rectangle">

            <size
                android:width="60dp"
                android:height="60dp"/>

            <solid
                android:color="@color/colorRed"/>

        </shape>

    </item>

    <item
        android:id="@+id/rectangle_green"
        android:top="20dp"
        android:left="20dp">

        <shape
            android:shape="rectangle">

            <size
                android:width="60dp"
                android:height="60dp"/>

            <solid
                android:color="@color/colorGreen"/>

        </shape>

    </item>

</layer-list>